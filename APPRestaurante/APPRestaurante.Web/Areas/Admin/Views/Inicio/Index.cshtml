@using APPRestaurante.Web.Areas.Admin.Models
@model InicioModel
@{
    ViewBag.Title = "Dashboard";

}

<div class="page-header">
    <h1>
        Dashboard
    </h1>
</div><!-- /.page-header -->

<div class="row">
    <div class="col-xs-12">
        <div class="row">
            <div class="space-6"></div>
            <div class="col-sm-12 infobox-container">
                <div class="infobox infobox-green">
                    <div class="infobox-icon">
                        <i class="ace-icon fa fa-comments"></i>
                    </div>

                    <div class="infobox-data">
                        <span class="infobox-data-number">@Model.totalPedidos</span>
                        <div class="infobox-content">Pedidos</div>
                    </div>
                </div>

                <div class="infobox infobox-blue">
                    <div class="infobox-icon">
                        <i class="ace-icon fa fa-shopping-cart"></i>
                    </div>

                    <div class="infobox-data">
                        <span class="infobox-data-number">@Model.totalPedidosProceso</span>
                        <div class="infobox-content">En Proceso</div>
                    </div>
                </div>

                <div class="infobox infobox-pink">
                    <div class="infobox-icon">
                        <i class="ace-icon fa fa-shopping-cart"></i>
                    </div>

                    <div class="infobox-data">
                        <span class="infobox-data-number">@Model.totalPedidosPagados</span>
                        <div class="infobox-content">Cancelados</div>
                    </div>
                </div>

                <div class="infobox infobox-red">
                    <div class="infobox-icon">
                        <i class="ace-icon fa fa-flask"></i>
                    </div>

                    <div class="infobox-data">
                        <span class="infobox-data-number">0</span>
                        <div class="infobox-content">Platos agotados</div>
                    </div>
                </div>

                <div class="infobox infobox-orange2">
                    <div class="infobox-chart">
                        <span class="sparkline" data-values="196,128,202,177,154,94,100,170,224"></span>
                    </div>

                    <div class="infobox-data">
                        <span class="infobox-data-number">S/ @Model.ventasDia</span>
                        <div class="infobox-content">Ventas día</div>
                    </div>
                </div>

                <div class="infobox infobox-blue2">
                    <div class="infobox-icon">
                        <i class="ace-icon fa fa-table"></i>
                    </div>

                    <div class="infobox-data">
                        <span class="infobox-data-number">@Model.totalPedidosProceso</span>
                        <div class="infobox-content">Mesas ocupadas</div>
                    </div>
                </div>

                <div class="space-6"></div>

                <div class="infobox infobox-green infobox-small infobox-dark">
                    <div class="infobox-icon">
                        <i class="ace-icon fa fa-money"></i>
                    </div>

                    <div class="infobox-data">
                        <div class="infobox-content">Total</div>
                        <div class="infobox-content">S/ @Model.ventaToal</div>
                    </div>
                </div>

                <div class="infobox infobox-blue infobox-small infobox-dark">
                    <div class="infobox-chart">
                        <span class="sparkline" data-values="3,4,2,3,4,4,2,2"></span>
                    </div>
                    <div class="infobox-data">
                        <div class="infobox-content">Pedidos</div>
                        <div class="infobox-content">@Model.totalPedidoGeneral</div>
                    </div>
                </div>

                <div class="infobox infobox-grey infobox-small infobox-dark">
                    <div class="infobox-icon">
                        <i class="ace-icon fa fa-download"></i>
                    </div>

                    <div class="infobox-data">
                        <div class="infobox-content">Empleados</div>
                        <div class="infobox-content">4</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="hr hr32 hr-dotted"></div>

        <div class="row">
            <div class="col-sm-12">
                <div class="widget-box transparent">
                    <div class="widget-header widget-header-flat">
                        <h4 class="widget-title lighter">
                            <i class="ace-icon fa fa-star orange"></i>
                            Popular
                        </h4>

                        <div class="widget-toolbar">
                            <a href="#" data-action="collapse">
                                <i class="ace-icon fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>

                    <div class="widget-body">
                        <div class="widget-main no-padding">
                            <table class="table table-bordered table-striped">
                                <thead class="thin-border-bottom">
                                    <tr>
                                        <th><i class="ace-icon fa fa-caret-right blue"></i>Descripción</th>
                                        <th><i class="ace-icon fa fa-caret-right blue"></i>Precio</th>
                                        <th class="hidden-480"><i class="ace-icon fa fa-caret-right blue"></i>Tipo</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.loMasPedido)
                                    {
                                        <tr>
                                            <td>@item.titulo</td>
                                            <td><b class="green">S/ @item.precio</b></td>
                                            <td class="hidden-480">
                                                @if (item.tipo == "Entrada")
                                                {
                                                    <span class="label label-info arrowed-in arrowed-in-right">@item.tipo</span>
                                                }
                                                else if (item.tipo == "Postre")
                                                {
                                                    <span class="label label-success arrowed-in arrowed-in-right">@item.tipo</span>
                                                }
                                                else if (item.tipo == "Fondo")
                                                {
                                                    <span class="label label-warning arrowed-in arrowed-in-right">@item.tipo</span>
                                                }
                                                else if (item.tipo == "Bebida")
                                                {
                                                    <span class="label label-default arrowed-in arrowed-in-right">@item.tipo</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div><!-- /.widget-main -->
                    </div><!-- /.widget-body -->
                </div><!-- /.widget-box -->
            </div>
        </div><!-- /.row -->

        <div class="hr hr32 hr-dotted"></div>

    </div><!-- /.col -->
</div>

<script type="text/javascript">

</script>