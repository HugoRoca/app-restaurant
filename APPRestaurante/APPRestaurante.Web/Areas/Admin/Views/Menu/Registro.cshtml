
@{
    ViewBag.Title = "Registro";
}

<div class="row">
    <div class="col-xs-12">
        <div class="widget-box">
            <div class="widget-header widget-header-blue widget-header-flat">
                <h4 class="widget-title lighter">Registro de Menú</h4>
            </div>
            <div class="widget-body">
                <div class="widget-main">
                    @using (Html.BeginForm("InsertarMenu", "Menu", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
                    {
                        <div class="form-group">
                            <label class="control-label col-xs-12 col-sm-3 no-padding-right">Fecha:</label>
                            <div class="col-xs-12 col-sm-4">
                                <div class="input-group">
                                    <input class="form-control date-picker" name="fecha" type="text" />
                                    <span class="input-group-addon">
                                        <i class="fa fa-calendar bigger-110"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="space-2"></div>
                        <div class="form-group">
                            <label class="control-label col-xs-12 col-sm-3 no-padding-right">Titulo:</label>
                            <div class="col-xs-12 col-sm-9">
                                <div class="clearfix">
                                    <input type="text" name="titulo" id="Titulo" class="col-xs-12 col-sm-6" />
                                </div>
                            </div>
                        </div>
                        <div class="space-2"></div>
                        <div class="form-group">
                            <label class="control-label col-xs-12 col-sm-3 no-padding-right">Descripción:</label>
                            <div class="col-xs-12 col-sm-9">
                                <div class="clearfix">
                                    <textarea name="descripcion" id="Descripcion" class="form-control" row="3"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="space-2"></div>
                        <div class="form-group">
                            <label class="control-label col-xs-12 col-sm-3 no-padding-right">Tipo:</label>
                            <div class="col-xs-12 col-sm-9">
                                <div class="clearfix">
                                    <input type="text" name="tipo" id="Tipo" class="col-xs-12 col-sm-6" />
                                </div>
                            </div>
                        </div>
                        <div class="space-2"></div>
                        <div class="form-group">
                            <label class="control-label col-xs-12 col-sm-3 no-padding-right">Precio:</label>
                            <div class="col-xs-12 col-sm-9">
                                <div class="clearfix">
                                    <input type="text" name="precio" id="Precio" class="col-xs-12 col-sm-6" />
                                </div>
                            </div>
                        </div>
                        <div class="space-2"></div>
                        <div class="form-group">
                            <label class="control-label col-xs-12 col-sm-3 no-padding-right">Imagen:</label>
                            <div class="col-xs-12 col-sm-9">
                                <div class="clearfix">
                                    <input type="file" id="id-input-file-2" name="foto" />
                                </div>
                            </div>
                        </div>
                        <hr />
                        <div class="wizard-actions">
                            <a class="btn btn-danger" href="@Url.Action("Index","Menu")">
                                <i class="fa fa-arrow-circle-o-left"></i> Atras
                            </a>
                            <button class="btn btn-success" type="submit">
                                <i class="fa fa-save"></i> Guardar
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $('.date-picker').datepicker({
        autoclose: true,
        todayHighlight: true,
        format: "dd/mm/yy"
    });

    var fecha = new Date();
    $('input[name=fecha]').val(FuncionesGenerales.ConvertirFechaDDMMYYYY(fecha));
</script>