@using APPRestaurante.Web.Areas.Admin.Models
@model UsuarioModel
@{
    ViewBag.Title = "Registro";
}

<div class="row">
    <div class="col-xs-12">
        <div class="widget-box">
            <div class="widget-header widget-header-blue widget-header-flat">
                <h4 class="widget-title lighter">Registro de Usuario</h4>
            </div>
            <div class="widget-body">
                <div class="widget-main">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label class="control-label col-xs-12 col-sm-3 no-padding-right">Nombre de Usuario:</label>
                            <div class="col-xs-12 col-sm-9">
                                <div class="clearfix">
                                    <input type="hidden" name="id" value="@Model.id" />
                                    <input type="text" name="NombreUsuario" autocomplete="off" class="col-xs-12 col-sm-6" autofocus maxlength="20" value="@Model.usuario" />
                                </div>
                            </div>
                        </div>
                        <div class="space-2"></div>
                        <div class="form-group">
                            <label class="control-label col-xs-12 col-sm-3 no-padding-right">Nombres y apellidos:</label>
                            <div class="col-xs-12 col-sm-9">
                                <div class="clearfix">
                                    @Html.DropDownListFor(model => model.idEmpleado, Model.empleados, "--Seleccione--", new { Name = "Empleado" })
                                </div>
                            </div>
                        </div>
                        <div class="space-2"></div>
                        <div class="form-group">
                            <label class="control-label col-xs-12 col-sm-3 no-padding-right">Rol:</label>
                            <div class="col-xs-12 col-sm-9">
                                <div class="clearfix">
                                    @Html.DropDownListFor(model => model.idRol, Model.roles, "--Seleccione--", new { Name = "Rol" })
                                </div>
                            </div>
                        </div>
                        <div class="space-2"></div>
                        <p class="text-center red soloActualizar">Solamente se puede actualizar la contraseña</p>
                        <div class="space-2"></div>
                        <div class="form-group">
                            <label class="control-label col-xs-12 col-sm-3 no-padding-right">Contraseña:</label>
                            <div class="col-xs-12 col-sm-9">
                                <div class="clearfix">
                                    <input type="password" name="Contrasenia" autocomplete="off" class="col-xs-12 col-sm-6" maxlength="10" />
                                </div>
                            </div>
                        </div>
                        <div class="space-2"></div>
                        <div class="form-group">
                            <label class="control-label col-xs-12 col-sm-3 no-padding-right">Repetir Contraseña:</label>
                            <div class="col-xs-12 col-sm-9">
                                <div class="clearfix">
                                    <input type="password" name="RepetirContrasenia" autocomplete="off" class="col-xs-12 col-sm-6" maxlength="10" />
                                </div>
                            </div>
                        </div>
                        <hr />
                        <div class="wizard-actions">
                            <a class="btn btn-danger" href="@Url.Action("Index","Usuario")">
                                <i class="fa fa-arrow-circle-o-left"></i> Atras
                            </a>
                            <button class="btn btn-success" type="button" name="Guardar">
                                <i class="fa fa-save"></i> Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    var accesoRegistroData = {
        urlProvider: {
            urlRegistro: '@Url.Action("Insertar", "Usuario")',
            urlPaginaLista: '@Url.Action("Index", "Usuario")'
        }
    }
</script>
<script type="text/javascript" src="@Url.Content("~/Scripts/usuario/registro.js")"></script>
