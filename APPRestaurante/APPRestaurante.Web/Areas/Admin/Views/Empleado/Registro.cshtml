
@{
    ViewBag.Title = "Registro de Empleado";
}
<div class="row">
    <div class="col-xs-12">
        <div class="widget-box">
            <div class="widget-header widget-header-blue widget-header-flat">
                <h4 class="widget-title lighter">Registro de Empleado</h4>
            </div>
            <div class="widget-body">
                <div class="widget-main">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label class="control-label col-xs-12 col-sm-3 no-padding-right">Nombres:</label>
                            <div class="col-xs-12 col-sm-9">
                                <div class="clearfix">
                                    <input type="hidden" name="Id" value="0" />
                                    <input type="text" name="Nombres" autocomplete="off" class="col-xs-12 col-sm-6" autofocus />
                                </div>
                            </div>
                        </div>
                        <div class="space-2"></div>
                        <div class="form-group">
                            <label class="control-label col-xs-12 col-sm-3 no-padding-right">Apellidos:</label>
                            <div class="col-xs-12 col-sm-9">
                                <div class="clearfix">
                                    <input type="text" name="Apellidos" autocomplete="off" class="col-xs-12 col-sm-6" autofocus />
                                </div>
                            </div>
                        </div>
                        <div class="space-2"></div>
                        <div class="form-group">
                            <label class="control-label col-xs-12 col-sm-3 no-padding-right">Dirección:</label>
                            <div class="col-xs-12 col-sm-9">
                                <div class="clearfix">
                                    <textarea name="Direccion" class="form-control" row="3"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="space-2"></div>
                        <div class="form-group">
                            <label class="control-label col-xs-12 col-sm-3 no-padding-right">Celular:</label>
                            <div class="col-xs-12 col-sm-9">
                                <div class="clearfix">
                                    <input type="tel" name="Celular" autocomplete="off" class="col-xs-12 col-sm-6" />
                                </div>
                            </div>
                        </div>
                        <div class="space-2"></div>
                        <div class="form-group">
                            <label class="control-label col-xs-12 col-sm-3 no-padding-right">Tipo documento:</label>
                            <div class="col-xs-12 col-sm-9">
                                <div class="clearfix">
                                    <select name="TipoDocumento" class="form-control">
                                        <option value="DNI">DNI</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="space-2"></div>
                        <div class="form-group">
                            <label class="control-label col-xs-12 col-sm-3 no-padding-right">Documento:</label>
                            <div class="col-xs-12 col-sm-9">
                                <div class="clearfix">
                                    <input type="tel" name="Documento" autocomplete="off" class="col-xs-12 col-sm-6" />
                                </div>
                            </div>
                        </div>
                        <div class="space-2"></div>
                        <div class="form-group">
                            <label class="control-label col-xs-12 col-sm-3 no-padding-right">Foto:</label>
                            <div class="col-xs-12 col-sm-9">
                                <div class="clearfix">
                                    <input type="file" id="Foto" />
                                </div>
                            </div>
                        </div>
                        <hr />
                        <div class="wizard-actions">
                            <a class="btn btn-danger" href="@Url.Action("Index","Empleado")">
                                <i class="fa fa-arrow-circle-o-left"></i> Atras
                            </a>
                            <button class="btn btn-success" type="button" name="Guardar">
                                <i class="fa fa-save"></i> Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    var empleadoRegistroData = {
        urlProvider: {
            urlRegistro: '@Url.Action("InsertarEmpleado", "Empleado")',
            urlPaginaLista: '@Url.Action("Index", "Empleado")'
        }
    }
</script>
<script type="text/javascript" src="@Url.Content("~/Scripts/Empleado/registro.js")"></script>