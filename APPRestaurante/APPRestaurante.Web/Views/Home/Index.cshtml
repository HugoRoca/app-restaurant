                            <h3 class="text-center text-uppercase">@item.titulo</h3>
                            <p class="text-justify" style="padding: 20px;">@item.descripcion.ToString().Substring(0, 150)...</p>
                            <p>
                                <button class="btn btn-primary btn-lg"><i class="fa fa-plus-circle"></i> Agregar</button>
                            </p>
                            <hr />
                        </div>
                    </div>
                }
            </div>
            <button class='btn btn-default leftRs'><</button>
            <button class='btn btn-default rightRs'>></button>
