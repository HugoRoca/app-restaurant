@if (Bebidas.Count > 0)
{
    <div class="container p8">
        <hr />
        <h3 class="text-center">Bebidas</h3>
        <div class="resCarousel" data-items="2-4-4-4" data-interval="2000" data-slide="1" data-animator="lazy">
            <div class="resCarousel-inner">
                @foreach (var item in Bebidas)
                {
                    <div class="item">
                        <div class="tile">
                            <div style="background: url('../../Uploads/Menu/@item.foto') center center no-repeat; height: 250px; background-size: cover; color: white;">
                                <h1>S/ @item.precioString</h1>
                            </div>
                            <h3 class="text-center text-uppercase">@item.titulo</h3>
                            <p class="text-justify" style="padding: 20px; height:100px;">@item.descripcion.ToString().Substring(0, 100)...</p>
                            <p>
