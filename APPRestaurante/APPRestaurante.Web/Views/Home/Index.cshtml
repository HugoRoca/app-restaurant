@using APPRestaurante.Models
@{
    List<Menu> Bebidas = ViewBag.Bebida;
    List<Menu> Entrada = ViewBag.Entrada;
    List<Menu> Fondo = ViewBag.Fondo;
    List<Menu> Postre = ViewBag.Postre;
    List<Empleado> empleados = ViewBag.Empleado;
}

@if (Fondo.Count > 0)
{
    <div class="container">
        <h3 class="text-center">Plato de fondo</h3>
        <div class="resCarousel" data-items="2-2-2-2" data-slide="2" data-interval="5000" data-speed="600" data-animator="lazy">
            <div class="resCarousel-inner">
                @foreach (var item in Fondo)
                {
                    <div class="item">
                        <div class="tile">
                            <div style="background: url('../../Uploads/Menu/@item.foto') center center no-repeat; height: 250px; background-size: cover; color: white;">
                                <h1>S/ @item.precioString</h1>
                            </div>
                            <h3 class="text-center text-uppercase">@item.titulo</h3>
                            <p class="text-justify" style="padding: 20px;">@item.descripcion.ToString().Substring(0, 150)...</p>
                            <p>
                                <button class="btn btn-primary btn-lg"><i class="fa fa-plus-circle"></i> Agregar</button>
                            </p>
                            <hr />
                        </div>
                    </div>
                }
            </div>
            <button class='btn btn-default leftRs'><</button>
            <button class='btn btn-default rightRs'>></button>
        </div>
    </div>
}

